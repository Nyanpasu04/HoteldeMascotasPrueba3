@model HoteldeMascotas.Models.Mascotas

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Mascotas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MascotasId" />
            <div class="form-group">
                <label asp-for="NombreMascota" class="control-label"></label>
                <input asp-for="NombreMascota" class="form-control" />
                <span asp-validation-for="NombreMascota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Raza" class="control-label"></label>
                <input asp-for="Raza" class="form-control" />
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Años" class="control-label"></label>
                <input asp-for="Años" class="form-control" />
                <span asp-validation-for="Años" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Vacunas" /> @Html.DisplayNameFor(model => model.Vacunas)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DueñosID" class="control-label"></label>
                <input asp-for="DueñosID" class="form-control" />
                <span asp-validation-for="DueñosID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
